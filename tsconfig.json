{
  "compilerOptions": {
    "composite": true,
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "types": ["@types/jest", "@testing-library/dom", "@testing-library/react", "@types/testing-library__jest-dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "checkJs": true,
    "target": "ESNext",
    "declarationDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "#src/*": ["./*"],
      "@admiral-ds/date-picker": ["./index"]
    },
    "plugins": [{ "transform": "typescript-transform-paths", "afterDeclarations": true }]
  },
  "include": ["./src"],
  "exclude": ["dist", "**/node_modules/*"]
}
